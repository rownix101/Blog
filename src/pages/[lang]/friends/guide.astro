  <script>
    // Check for application data from sessionStorage
    const storedData = sessionStorage.getItem('friendApplicationData')
    const storedPrepared = sessionStorage.getItem('friendApplicationPrepared')
    const storedInstructions = sessionStorage.getItem('friendApplicationInstructions')

    if (storedData && storedPrepared && storedInstructions) {
      try {
        const applicationData = JSON.parse(storedData)
        const preparedContent = JSON.parse(storedPrepared)
        const instructions = JSON.parse(storedInstructions)

        // Update page title to show it's for their application
        const titleElement = document.querySelector('h1')
        if (titleElement) {
          titleElement.textContent = titleElement.textContent.replace(
            '{t["friends.guide_title"] || "Friend Application Guide"}',
            applicationData.name ? `${applicationData.name} - ç”³è¯·æŒ‡å—` : 'å‹é“¾ç”³è¯·æŒ‡å—'
          )
        }

        // Update Step 1 to show their prepared content
        const prefilledSection = document.getElementById('prefilledTemplate')
        const userYamlEntry = document.getElementById('userYamlEntry')
        const templateSection = document.querySelector('#templateContent').closest('section')

        if (prefilledSection && userYamlEntry && templateSection) {
          // Hide the generic template section
          templateSection.style.display = 'none'

          // Show their prepared content section
          prefilledSection.classList.remove('hidden')
          userYamlEntry.textContent = preparedContent

          // Update the section title
          const sectionTitle = templateSection.querySelector('h2')
          if (sectionTitle) {
            sectionTitle.textContent = '1. æ‚¨çš„ç”³è¯·å·²å‡†å¤‡å¥½'
          }

          // Update description
          const sectionDesc = templateSection.querySelector('.text-muted-foreground')
          if (sectionDesc) {
            sectionDesc.textContent = `æ‚¨çš„å‹é“¾ç”³è¯·ä¿¡æ¯å·²è‡ªåŠ¨ç”Ÿæˆï¼Œç›´æ¥å¤åˆ¶ä¸‹æ–¹å†…å®¹å³å¯ã€‚ç½‘ç«™ï¼š${applicationData.name}`
          }
        }

        // Update Step 2 with direct fork link
        const forkBtn = document.querySelector('a[href*="github.com/fork"]')
        if (forkBtn && instructions.forkUrl) {
          forkBtn.href = instructions.forkUrl
        }

        // Update Step 3 with file path and edit link
        const filePathElement = document.querySelector('.font-mono')
        if (filePathElement && instructions.filePath) {
          filePathElement.textContent = instructions.filePath
        }

        // Add direct edit button
        const step3Section = Array.from(document.querySelectorAll('section')).find(section =>
          section.querySelector('h2')?.textContent.includes('Edit friends.yaml')
        )
        if (step3Section && instructions.editUrl) {
          const editBtn = document.createElement('a')
          editBtn.href = instructions.editUrl
          editBtn.target = '_blank'
          editBtn.className = 'inline-flex items-center gap-2 px-4 py-2 bg-secondary text-secondary-foreground rounded-lg hover:bg-secondary/90 transition-colors mt-3'
          editBtn.innerHTML = `
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
            </svg>
            ç›´æ¥ç¼–è¾‘æ–‡ä»¶
          `
          step3Section.querySelector('.space-y-4').appendChild(editBtn)
        }

        // Update Step 4 with PR template
        const step4Section = Array.from(document.querySelectorAll('section')).find(section =>
          section.querySelector('h2')?.textContent.includes('Submit Pull Request')
        )
        if (step4Section) {
          const commitLi = step4Section.querySelector('li:nth-child(1)')
          const titleLi = step4Section.querySelector('li:nth-child(2)')

          if (commitLi) commitLi.textContent = `æäº¤ä¿¡æ¯ï¼š\`${instructions.commitMessage}\``
          if (titleLi) titleLi.textContent = `PR æ ‡é¢˜ï¼š\`${instructions.prTitle}\``

          // Add PR description with preview
          if (instructions.prBody) {
            const descLi = document.createElement('li')
            descLi.innerHTML = `PR æè¿°ï¼š<div class="mt-2 p-3 bg-muted/50 rounded text-sm">${instructions.prBody.substring(0, 200)}${instructions.prBody.length > 200 ? '...' : ''}</div>`
            step4Section.querySelector('ul').appendChild(descLi)
          }

          // Add create PR button
          if (instructions.prUrl) {
            const prBtn = document.createElement('a')
            prBtn.href = instructions.prUrl
            prBtn.target = '_blank'
            prBtn.className = 'inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors mt-4'
            prBtn.innerHTML = `
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              åˆ›å»º Pull Request
            `
            step4Section.querySelector('.space-y-4').appendChild(prBtn)
          }
        }

        // Show PR preview section with full description
        const prPreviewSection = document.getElementById('prPreviewSection')
        const prDescriptionPreview = document.getElementById('prDescriptionPreview')
        if (prPreviewSection && prDescriptionPreview && instructions.prBody) {
          prPreviewSection.classList.remove('hidden')
          prDescriptionPreview.textContent = instructions.prBody
        }

        // Clear sessionStorage after use
        sessionStorage.removeItem('friendApplicationData')
        sessionStorage.removeItem('friendApplicationPrepared')
        sessionStorage.removeItem('friendApplicationInstructions')

      } catch (error) {
        console.error('Error processing application data:', error)
      }
    }

    // Copy template functionality
    document.getElementById('copyTemplateBtn')?.addEventListener('click', async function() {
      // Prioritize user's prepared content if available
      const userYamlEntry = document.getElementById('userYamlEntry')
      const templateContent = userYamlEntry && !userYamlEntry.parentElement.classList.contains('hidden')
        ? userYamlEntry.textContent
        : document.getElementById('templateContent').textContent

      const originalText = this.textContent

      try {
        await navigator.clipboard.writeText(templateContent)
        const copySuccessText = document.getElementById('copySuccessText')?.textContent || 'Copied!'
        this.textContent = copySuccessText
        this.classList.add('bg-green-600', 'hover:bg-green-700')
        this.classList.remove('bg-primary', 'hover:bg-primary/90')

        setTimeout(() => {
          this.textContent = originalText
          this.classList.remove('bg-green-600', 'hover:bg-green-700')
          this.classList.add('bg-primary', 'hover:bg-primary/90')
        }, 2000)
      } catch (err) {
        console.error('Failed to copy template:', err)
      }
    })

    // Copy PR description functionality
    document.getElementById('copyPRDescriptionBtn')?.addEventListener('click', async function() {
      const prDescription = document.getElementById('prDescriptionPreview')?.textContent
      if (!prDescription) return

      const originalText = this.textContent

      try {
        await navigator.clipboard.writeText(prDescription)
        const copySuccessText = document.getElementById('copySuccessText').textContent
        this.textContent = copySuccessText
        this.classList.add('bg-green-600', 'hover:bg-green-700')
        this.classList.remove('bg-secondary', 'hover:bg-secondary/90')

        setTimeout(() => {
          this.textContent = originalText
          this.classList.remove('bg-green-600', 'hover:bg-green-700')
          this.classList.add('bg-secondary', 'hover:bg-secondary/90')
        }, 2000)
      } catch (err) {
        console.error('Failed to copy PR description:', err)
      }
    })
  </script>
