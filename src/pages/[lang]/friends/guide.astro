---
import { SITE } from '@/consts'
import { languages, ui, type Lang } from '@/i18n/ui'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }))
}

const { lang } = Astro.params
const t = ui[lang as Lang]
const title = `${t['friends.guide_title'] || 'Friend Application Guide'} - ${SITE.title}`
const description =
  t['friends.guide_desc'] ||
  'Step-by-step guide to submit friend link application'

// Get template content
const templateContent = await fetch(
  new URL('../../../.github/FRIEND_APPLICATION_TEMPLATE.md', Astro.url),
)
  .then((res) => res.text())
  .catch(() => '')
---

<Layout title={title} description={description}>
  <div class="container mx-auto max-w-4xl px-4 py-12">
    <header class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold">
        {t['friends.guide_title'] || 'Friend Application Guide'}
      </h1>
      <p class="text-muted-foreground text-xl">
        {
          t['friends.guide_subtitle'] ||
            'Follow these steps to successfully submit your friend link application'
        }
      </p>
    </header>

    <!-- Hidden data for JavaScript -->
    <div id="copySuccessText" class="hidden">
      {t['friends.copied'] || 'Copied!'}
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="space-y-8 lg:col-span-2">
        <!-- Step 1: Copy Template -->
        <section class="bg-card rounded-lg border p-6">
          <div class="mb-4 flex items-center gap-3">
            <div
              class="bg-primary text-primary-foreground flex h-8 w-8 items-center justify-center rounded-full font-semibold"
            >
              1
            </div>
            <h2 class="text-xl font-semibold">
              {t['friends.guide.step1.title'] || 'Copy Application Template'}
            </h2>
          </div>
          <p class="text-muted-foreground mb-4">
            {
              t['friends.guide.step1.desc'] ||
                'First, copy the application template below. You will need to fill in your information.'
            }
          </p>

          <div class="bg-muted/50 rounded-lg p-4">
            <div class="mb-2 flex items-center justify-between">
              <h3 class="text-sm font-semibold">
                {t['friends.guide.template_title'] || 'Application Template'}
              </h3>
              <button
                id="copyTemplateBtn"
                class="bg-primary text-primary-foreground hover:bg-primary/90 rounded px-3 py-1 text-sm transition-colors"
              >
                {t['friends.copy'] || 'Copy'}
              </button>
            </div>
            <pre
              class="bg-background overflow-x-auto rounded border p-3 text-sm"><code id="templateContent">{t['friends.guide.template_content'] || ''}</code></pre>
            <div id="prefilledTemplate" class="hidden">
              <p class="text-muted-foreground mb-2 text-sm">
                {
                  t['friends.guide.your_data'] ||
                    'Your application data is ready:'
                }
              </p>
              <pre
                class="overflow-x-auto rounded border border-emerald-200 bg-emerald-50 p-3 text-sm text-emerald-900 dark:border-emerald-900/60 dark:bg-emerald-950/40 dark:text-emerald-100"><code id="userYamlEntry" /></pre>
            </div>
          </div>
        </section>

        <!-- Step 2: Fork Repository -->
        <section class="bg-card rounded-lg border p-6">
          <div class="mb-4 flex items-center gap-3">
            <div
              class="bg-primary text-primary-foreground flex h-8 w-8 items-center justify-center rounded-full font-semibold"
            >
              2
            </div>
            <h2 class="text-xl font-semibold">
              {t['friends.guide.step2.title'] || 'Fork the Repository'}
            </h2>
          </div>
          <p class="text-muted-foreground mb-4">
            {
              t['friends.guide.step2.desc'] ||
                'Fork this blog repository to your GitHub account.'
            }
          </p>
          <a
            href="https://github.com/rownix101/Blog/fork"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center gap-2 rounded-lg px-4 py-2 transition-colors"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
