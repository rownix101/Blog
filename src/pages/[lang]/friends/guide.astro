import { ui, type Lang } from '@/i18n/ui'
import { SITE } from '@/consts'

export async function getStaticPaths() {
  return [
    { params: { lang: 'zh-cn' } },
    { params: { lang: 'en' } }
  ]
}

const { lang } = Astro.params
const t = ui[lang as Lang]
const title = `${t['friends.guide_title'] || 'Friend Application Guide'} - ${SITE.title}`
const description = t['friends.guide_desc'] || 'Step-by-step guide to submit friend link application'

// Get template content
const templateContent = await fetch(
  new URL('../../../.github/FRIEND_APPLICATION_TEMPLATE.md', Astro.url)
).then(res => res.text()).catch(() => '')
