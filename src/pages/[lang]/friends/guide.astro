---
import { SITE } from '@/consts'
import { languages, ui, type Lang } from '@/i18n/ui'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }))
}

const { lang } = Astro.params
const t = ui[lang as Lang]
const title = `${t['friends.guide_title'] || 'Friend Application Guide'} - ${SITE.title}`
const description =
  t['friends.guide_desc'] ||
  'Step-by-step guide to submit friend link application'

---

<Layout title={title} description={description}>
  <div class="container mx-auto max-w-4xl px-4 py-12">
    <header class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold">
        {t['friends.guide_title'] || 'Friend Application Guide'}
      </h1>
      <p class="text-muted-foreground text-xl">
        {
          t['friends.guide_subtitle'] ||
            'Follow these steps to successfully submit your friend link application'
        }
      </p>
    </header>

    <!-- Hidden data for JavaScript -->
    <div id="copySuccessText" class="hidden">
      {t['friends.copied'] || 'Copied!'}
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="space-y-8 lg:col-span-2">
        <!-- Step 1: Create Issue -->
        <section class="bg-card rounded-lg border p-6">
          <div class="mb-4 flex items-center gap-3">
            <div
              class="bg-primary text-primary-foreground flex h-8 w-8 items-center justify-center rounded-full font-semibold"
            >
              1
            </div>
            <h2 class="text-xl font-semibold">
              {t['friends.guide.step2.title'] || 'Create GitHub Issue'}
            </h2>
          </div>
          <p class="text-muted-foreground mb-4">
            {
              t['friends.guide.step2.desc'] ||
                'Click the button below to open the application Issue.'
            }
          </p>
          <a
            href="https://github.com/rownix101/Blog/issues/new?assignees=&labels=friend-application&template=friend-application.yml"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center gap-2 rounded-lg px-4 py-2 transition-colors"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            {t['friends.create_issue'] || 'Create GitHub Issue'}
          </a>
        </section>

        <!-- Step 3: Fill Info -->
        <section class="bg-card rounded-lg border p-6">
          <div class="mb-4 flex items-center gap-3">
            <div
              class="bg-primary text-primary-foreground flex h-8 w-8 items-center justify-center rounded-full font-semibold"
            >
              2
            </div>
            <h2 class="text-xl font-semibold">
              {t['friends.guide.step3.title'] || 'Fill & Submit'}
            </h2>
          </div>
          <div class="text-muted-foreground space-y-4">
            <p>
              {
                t['friends.guide.step3.desc1'] ||
                  'Paste your info into the Issue form.'
              }
            </p>
            <p>
              {
                t['friends.guide.step3.desc2'] ||
                  'Click Submit New Issue when ready.'
              }
            </p>
            <div
              class="rounded-lg border border-amber-200 bg-amber-50 p-4 text-sm text-amber-800"
            >
              <strong>{t['friends.guide.note'] || 'Note:'}</strong>
              {
                t['friends.guide.step3.note'] ||
                  'Our bot will automatically detect your Issue and create a PR.'
              }
            </div>
          </div>
        </section>

        <!-- Step 4: Wait for Review -->
        <section class="bg-card rounded-lg border p-6">
          <div class="mb-4 flex items-center gap-3">
            <div
              class="bg-primary text-primary-foreground flex h-8 w-8 items-center justify-center rounded-full font-semibold"
            >
              3
            </div>
            <h2 class="text-xl font-semibold">
              {t['friends.guide.step4.title'] || 'Wait for Review'}
            </h2>
          </div>
          <div class="text-muted-foreground space-y-4">
            <p>
              {
                t['friends.guide.step4.desc'] ||
                  'Your application will be processed automatically:'
              }
            </p>
            <ul class="list-inside list-disc space-y-2">
              <li>
                {
                  t['friends.guide.step4.commit'] ||
                    'Bot validates links'
                }
              </li>
              <li>
                {
                  t['friends.guide.step4.pr_title'] ||
                    'Auto-merge on approval'
                }
              </li>
              <li>
                  {t['friends.guide.step4.pr_desc'] || 'Your site appears in the list'}
              </li>
            </ul>
          </div>
        </section>


      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Requirements Card -->
        <div class="bg-card rounded-lg border p-6">
          <h3 class="mb-4 font-semibold">
            {t['friends.requirements_title'] || 'Requirements'}
          </h3>
          <ul class="text-muted-foreground space-y-2 text-sm">
            <li>
              ✓ {
                t['friends.req.active'] ||
                  'Website must be active and accessible'
              }
            </li>
            <li>
              ✓ {t['friends.req.quality'] || 'High-quality content and design'}
            </li>
            <li>
              ✓ {t['friends.req.reciprocal'] || 'Must link back to this blog'}
            </li>
            <li>
              ✓ {t['friends.req.appropriate'] || 'Appropriate and safe content'}
            </li>
          </ul>
        </div>

        <!-- Reciprocal Link -->
        <div class="rounded-lg border border-blue-200 bg-blue-50 p-6">
          <h3 class="mb-3 font-semibold text-blue-900">
            {t['friends.reciprocal_title'] || 'Add Our Link'}
          </h3>
          <p class="mb-3 text-sm text-blue-800">
            {
              t['friends.reciprocal_desc'] ||
                'Please add this link to your website:'
            }
          </p>
          <code class="block rounded bg-blue-100 p-2 text-xs text-blue-900">
            &lt;a href="https://www.rownix.dev" target="_blank"
            rel="noopener"&gt;Rownix's Blog&lt;/a&gt;
          </code>
        </div>

        <!-- Review Timeline -->
        <div class="rounded-lg border border-amber-200 bg-amber-50 p-6">
          <h3 class="mb-3 font-semibold text-amber-900">
            {t['friends.review_timeline'] || 'Review Timeline'}
          </h3>
          <div class="space-y-2 text-sm text-amber-800">
            <div class="flex items-center gap-2">
              <div class="h-2 w-2 rounded-full bg-amber-600"></div>
              <span
                >{
                  t['friends.timeline.automated'] || 'Automated checks: Instant'
                }</span
              >
            </div>
            <div class="flex items-center gap-2">
              <div class="h-2 w-2 rounded-full bg-amber-600"></div>
              <span
                >{
                  t['friends.timeline.manual'] || 'Manual review: 24 hours'
                }</span
              >
            </div>
            <div class="flex items-center gap-2">
              <div class="h-2 w-2 rounded-full bg-amber-600"></div>
              <span
                >{
                  t['friends.timeline.approval'] ||
                    'Approval: Added to friends list'
                }</span
              >
            </div>
          </div>
        </div>

        <!-- Help -->
        <div class="bg-muted/50 rounded-lg p-6">
          <h3 class="mb-3 font-semibold">
            {t['friends.need_help'] || 'Need Help?'}
          </h3>
          <div class="space-y-2 text-sm">
            <a
              href="https://github.com/rownix101/Blog/issues/new?assignees=&labels=friend-application&template=friend-application.yml"
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary block hover:underline"
            >
              {t['friends.create_issue'] || 'Create an Issue'}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

</Layout>
