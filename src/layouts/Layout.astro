---
import '@/styles/global.css'
import '@/styles/typography.css'

import FloatingSidebar from '@/components/FloatingSidebar.astro'
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { TermsConsent } from '@/components/TermsConsent'
import { languages } from '@/i18n/ui'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
  hideFloatingSidebar?: boolean
  lang?: string
}

const props = Astro.props as Props
const className = props.class
const hideFloatingSidebar = props.hideFloatingSidebar ?? false

const langRaw = props.lang ?? 'zh-cn'
const lang: keyof typeof languages =
  langRaw in languages ? (langRaw as keyof typeof languages) : 'zh-cn'
---

<!doctype html>
<html class="bg-background text-foreground scheme-light-dark" lang={lang}>
  <Head lang={lang}>
    <slot name="head" />
  </Head>
  <body
    class="flex h-fit min-h-screen flex-col gap-y-6 overflow-x-clip font-sans"
    transition:persist
  >
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="focus:bg-primary focus:text-primary-foreground focus:ring-ring sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:rounded-md focus:px-4 focus:py-2 focus:shadow-lg focus:ring-2 focus:ring-offset-2 focus:outline-none"
      aria-label="Skip to main content"
    >
      Skip to main content
    </a>

    <!-- Prevent same-page navigation to avoid unnecessary transitions -->
    <script is:inline>
      ;(function () {
        if (window.__preventSamePageNav) return
        window.__preventSamePageNav = true

        function normalizePath(path) {
          return path ? path.split('#')[0].replace(/\/$/, '') || '/' : '/'
        }

        function shouldPreventNavigation(link) {
          if (!link) return false

          const href = link.getAttribute('href')
          if (
            !href ||
            href.startsWith('http') ||
            href.startsWith('mailto:') ||
            href.startsWith('tel:')
          ) {
            return false
          }

          const currentPath = normalizePath(window.location.pathname)
          const targetPath = normalizePath(href)

          return currentPath === targetPath && !href.includes('#')
        }

        // Handle click events (desktop and mobile fallback)
        function handleClick(e) {
          const link = e.target.closest('a[data-internal-link="true"]')
          if (link && shouldPreventNavigation(link)) {
            e.preventDefault()
            e.stopPropagation()
            e.stopImmediatePropagation()
            return false
          }
        }

        // Use capture phase to intercept before Astro's view transitions
        document.addEventListener('click', handleClick, true)
      })()
    </script>
    <header
      class="bg-background/50 divide-border sticky top-0 z-50 divide-y pt-[env(safe-area-inset-top,0px)] backdrop-blur-sm xl:divide-none xl:bg-transparent xl:backdrop-blur-none"
    >
      <Header lang={lang} />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      id="main-content"
      class={cn(
        'w-full mx-auto flex grow flex-col gap-y-6 px-4 pb-[calc(5rem+env(safe-area-inset-bottom,0px))]',
        className,
      )}
      tabindex="-1"
    >
      <slot />
    </main>
    {false && !hideFloatingSidebar && <FloatingSidebar lang={lang} />}
    <Footer lang={lang} />
    <TermsConsent client:only="react" lang={lang} />
  </body>
</html>
