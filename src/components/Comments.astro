---
// ËØÑËÆ∫Á≥ªÁªü‰∏ªÁªÑ‰ª∂
interface Props {
  postId: string
  title: string
}

---

<section id="comments-section" class="mt-12 border-t pt-8">
  <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>
    Comments
  </h2>

  <!-- ËØÑËÆ∫Ë°®Âçï -->
  <div id="comment-form-container" class="mb-8">
    <div class="bg-muted/30 rounded-lg p-6">
      <h3 class="text-lg font-semibold mb-4">Leave a Comment</h3>

      <!-- ÁôªÂΩïË°®Âçï -->
      <form id="login-form" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="comment-name" class="block text-sm font-medium mb-2">Name *</label>
            <input
              id="comment-name"
              type="text"
              name="name"
              required
              class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="comment-email" class="block text-sm font-medium mb-2">Email *</label>
            <input
              id="comment-email"
              type="email"
              name="email"
              required
              class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary"
              placeholder="rownix101@gmail.com"
            />
          </div>
        </div>
        <div>
          <label for="comment-website" class="block text-sm font-medium mb-2">Website (optional)</label>
          <input
            id="comment-website"
            type="url"
            name="website"
            class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary"
            placeholder="https://yourwebsite.com"
          />
        </div>
        <button
          type="submit"
          id="login-btn"
          class="w-full md:w-auto px-6 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
        >
          Continue to Comment
        </button>
      </form>

      <!-- ËØÑËÆ∫Ë°®ÂçïÔºàÁôªÂΩïÂêéÊòæÁ§∫Ôºâ -->
      <form id="comment-form" class="space-y-4 hidden">
        <div class="flex items-center gap-3 p-3 bg-background rounded-md">
          <img id="user-avatar" src="" alt="" class="w-10 h-10 rounded-full" />
          <div>
            <div id="user-name" class="font-medium"></div>
            <div id="user-email" class="text-sm text-muted-foreground"></div>
          </div>
          <button
            type="button"
            id="logout-btn"
            class="ml-auto text-sm text-muted-foreground hover:text-foreground"
          >
            Change user
          </button>
        </div>

        <div>
          <label for="comment-content" class="block text-sm font-medium mb-2">Comment *</label>
          <textarea
            id="comment-content"
            name="content"
            rows="4"
            required
            maxlength="2000"
            class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary resize-none"
            placeholder="Share your thoughts..."
          ></textarea>
          <div class="text-xs text-muted-foreground mt-1">
            <span id="char-count">0</span>/2000 characters
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="text-sm text-muted-foreground">
            <span>Markdown supported. </span>
            <a href="/markdown-guide" class="underline hover:text-foreground">Learn more</a>
          </div>
          <button
            type="submit"
            id="submit-comment-btn"
            class="px-6 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors disabled:opacity-50"
          >
            Post Comment
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- ËØÑËÆ∫ÂàóË°® -->
  <div id="comments-container">
    <!-- Âä†ËΩΩÁä∂ÊÄÅ -->
    <div id="comments-loading" class="flex items-center justify-center py-8">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
      <span class="ml-2 text-muted-foreground">Loading comments...</span>
    </div>

    <!-- ËØÑËÆ∫ÂàóË°®ÂÆπÂô® -->
    <div id="comments-list" class="space-y-6 hidden">
      <!-- ËØÑËÆ∫Â∞ÜÈÄöËøá JavaScript Âä®ÊÄÅÊèíÂÖ• -->
    </div>

    <!-- Á©∫Áä∂ÊÄÅ -->
    <div id="no-comments" class="text-center py-8 hidden">
      <svg class="w-12 h-12 mx-auto text-muted-foreground mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <p class="text-muted-foreground">No comments yet. Be the first to share your thoughts!</p>
    </div>

    <!-- ÈîôËØØÁä∂ÊÄÅ -->
    <div id="comments-error" class="bg-destructive/10 border border-destructive/20 text-destructive p-4 rounded-md hidden">
      <p class="font-medium">Failed to load comments</p>
      <p class="text-sm">Please try again later.</p>
    </div>
  </div>
</section>

<script>
  // ËØÑËÆ∫Á≥ªÁªü TypeScript
  interface User {
    id: number
    email: string
    name: string
    avatar_url?: string
    website?: string
    bio?: string
  }

  interface Comment {
    id: number
    post_id: string
    parent_id?: number
    content: string
    html_content: string
    status: string
    created_at: string
    updated_at: string
    user_id?: number
    user_name?: string
    user_email?: string
    user_avatar?: string
    user_website?: string
    like_count?: number
    reply_count?: number
    replies?: Comment[]
  }

  interface WindowWithCommentSystem extends Window {
    commentSystem?: CommentSystem
  }

  class CommentSystem {
    postId: string
    currentUser: User | null
    comments: Comment[]
    replyToId: number | null
    replyToName: string | null

    constructor() {
      this.postId = '{postId}'
      this.currentUser = null
      this.comments = []
      this.replyToId = null
      this.replyToName = null
      this.init()
    }

    async init() {
      this.setupEventListeners()
      await this.loadCurrentUser()
      await this.loadComments()
    }

    setupEventListeners() {
      // ÁôªÂΩïË°®Âçï
      const loginForm = document.getElementById('login-form') as HTMLFormElement
      if (loginForm) {
        loginForm.addEventListener('submit', (e: Event) => this.handleLogin(e))
      }

      // ËØÑËÆ∫Ë°®Âçï
      const commentForm = document.getElementById('comment-form') as HTMLFormElement
      if (commentForm) {
        commentForm.addEventListener('submit', (e: Event) => this.handleCommentSubmit(e))
      }

      // ÈÄÄÂá∫ÊåâÈíÆ
      const logoutBtn = document.getElementById('logout-btn') as HTMLButtonElement
      if (logoutBtn) {
        logoutBtn.addEventListener('click', () => this.handleLogout())
      }

      // Â≠óÁ¨¶ËÆ°Êï∞
      const contentTextarea = document.getElementById('comment-content') as HTMLTextAreaElement
      if (contentTextarea) {
        contentTextarea.addEventListener('input', (e: Event) => {
          const target = e.target as HTMLTextAreaElement
          const count = target.value.length
          const charCount = document.getElementById('char-count')
          if (charCount) {
            charCount.textContent = count.toString()
          }
        })
      }
    }

    async loadCurrentUser() {
      const token = this.getCookie('comment_token')
      if (!token) {
        this.showLoginForm()
        return
      }

      try {
        const response = await fetch('/api/auth/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email: 'dummy' }) // Âè™ÊòØ‰∏∫‰∫ÜÈ™åËØÅ token
        })

        if (response.ok) {
          const data = await response.json()
          this.currentUser = data.user
          this.showCommentForm()
        } else {
          this.clearCookie('comment_token')
          this.showLoginForm()
        }
      } catch (error) {
        console.error('Load user error:', error)
        this.showLoginForm()
      }
    }

    async handleLogin(e: Event) {
      e.preventDefault()
      const formData = new FormData(e.target as HTMLFormElement)
      const loginBtn = document.getElementById('login-btn') as HTMLButtonElement

      if (loginBtn) {
        loginBtn.disabled = true
        loginBtn.textContent = 'Signing in...'
      }

      try {
        const response = await fetch('/api/auth/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            email: formData.get('email'),
            name: formData.get('name'),
            website: formData.get('website')
          })
        })

        const data = await response.json()

        if (response.ok) {
          this.currentUser = data.user
          this.showCommentForm()
          this.showToast(data.message, 'success')
        } else {
          this.showToast(data.error, 'error')
        }
      } catch (error) {
        console.error('Login error:', error)
        this.showToast('Login failed', 'error')
      } finally {
        if (loginBtn) {
          loginBtn.disabled = false
          loginBtn.textContent = 'Continue to Comment'
        }
      }
    }

    handleLogout() {
      this.clearCookie('comment_token')
      this.currentUser = null
      this.showLoginForm()
    }

    showLoginForm() {
      const loginForm = document.getElementById('login-form')
      const commentForm = document.getElementById('comment-form')
      if (loginForm) loginForm.classList.remove('hidden')
      if (commentForm) commentForm.classList.add('hidden')
    }

    showCommentForm() {
      if (!this.currentUser) return

      const loginForm = document.getElementById('login-form')
      const commentForm = document.getElementById('comment-form')
      const userName = document.getElementById('user-name')
      const userEmail = document.getElementById('user-email')
      const userAvatar = document.getElementById('user-avatar') as HTMLImageElement

      if (loginForm) loginForm.classList.add('hidden')
      if (commentForm) commentForm.classList.remove('hidden')

      // Â°´ÂÖÖÁî®Êà∑‰ø°ÊÅØ
      if (userName && this.currentUser) userName.textContent = this.currentUser.name
      if (userEmail && this.currentUser) userEmail.textContent = this.currentUser.email
      if (userAvatar && this.currentUser) {
        userAvatar.src = this.currentUser.avatar_url || `https://ui-avatars.com/api/?name=${encodeURIComponent(this.currentUser.name)}&background=random`
      }
    }

    async loadComments() {
      try {
        const response = await fetch(`/api/comments?post_id=${this.postId}`)
        const data = await response.json()

        if (response.ok) {
          this.comments = data.comments
          this.renderComments()
        } else {
          this.showError()
        }
      } catch (error) {
        console.error('Load comments error:', error)
        this.showError()
      } finally {
        const loading = document.getElementById('comments-loading')
        if (loading) loading.classList.add('hidden')
      }
    }

    renderComments() {
      const container = document.getElementById('comments-list')
      const noComments = document.getElementById('no-comments')

      if (!container || !noComments) return

      if (this.comments.length === 0) {
        container.classList.add('hidden')
        noComments.classList.remove('hidden')
        return
      }

      container.classList.remove('hidden')
      noComments.classList.add('hidden')

      container.innerHTML = this.comments.map((comment: Comment) => this.renderComment(comment)).join('')
    }

    renderComment(comment: Comment, isReply = false): string {
      const date = new Date(comment.created_at).toLocaleDateString()
      const hasReplies = comment.replies && comment.replies.length > 0

      return `
        <div class="comment ${isReply ? 'ml-8 border-l-2 border-muted pl-6' : ''}" data-comment-id="${comment.id}">
          <div class="flex gap-4">
            <img
              src="${comment.user_avatar || `https://ui-avatars.com/api/?name=${encodeURIComponent(comment.user_name || 'Anonymous')}&background=random`}"
              alt="${comment.user_name}"
              class="w-10 h-10 rounded-full flex-shrink-0"
            />
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="font-medium">${comment.user_name}</span>
                ${comment.user_website ? `<a href="${comment.user_website}" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">üîó</a>` : ''}
                <span class="text-sm text-muted-foreground">${date}</span>
              </div>
              <div class="prose prose-sm max-w-none text-foreground">
                ${comment.html_content}
              </div>

              <!-- ÁÇπËµûÂíåÊìç‰ΩúÊåâÈíÆ -->
              <div class="flex items-center gap-4 mt-3">
                <div class="like-button" data-comment-id="${comment.id}"></div>

                <button
                  class="text-sm text-muted-foreground hover:text-foreground transition-colors"
                  onclick="window.commentSystem?.replyToComment(${comment.id}, '${comment.user_name}')"
                >
                  Reply
                </button>

                <div class="text-xs text-muted-foreground">
                  ${comment.like_count || 0} ${comment.like_count === 1 ? 'like' : 'likes'}
                  ${comment.reply_count ? ` ‚Ä¢ ${comment.reply_count} ${comment.reply_count === 1 ? 'reply' : 'replies'}` : ''}
                </div>
              </div>

              ${hasReplies ? `
                <div class="mt-4 space-y-4">
                  ${comment.replies?.map((reply: Comment) => this.renderComment(reply, true)).join('')}
                </div>
              ` : ''}
            </div>
          </div>
        </div>
      `
    }

    async handleCommentSubmit(e: Event) {
      e.preventDefault()
      const formData = new FormData(e.target as HTMLFormElement)
      const contentValue = formData.get('content')
      const content = typeof contentValue === 'string' ? contentValue.trim() : ''
      const submitBtn = document.getElementById('submit-comment-btn') as HTMLButtonElement

      if (!content) return

      if (submitBtn) {
        submitBtn.disabled = true
        submitBtn.textContent = 'Posting...'
      }

      try {
        const requestBody: any = {
          post_id: this.postId,
          content: content,
          token: this.getCookie('comment_token')
        }

        // Â¶ÇÊûúÊòØÂõûÂ§çËØÑËÆ∫
        if (this.replyToId) {
          requestBody.parent_id = this.replyToId
        }

        const response = await fetch('/api/comments', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(requestBody)
        })

        const data = await response.json()

        if (response.ok) {
          this.showToast(data.message, 'success')
          const form = e.target as HTMLFormElement
          form.reset()
          const charCount = document.getElementById('char-count')
          if (charCount) charCount.textContent = '0'
          this.clearReply()
          await this.loadComments()
        } else {
          this.showToast(data.error, 'error')
        }
      } catch (error) {
        console.error('Submit comment error:', error)
        this.showToast('Failed to post comment', 'error')
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false
          submitBtn.textContent = 'Post Comment'
        }
      }
    }

    // ÂõûÂ§çËØÑËÆ∫
    replyToComment(commentId: number, userName: string) {
      this.replyToId = commentId
      this.replyToName = userName

      const form = document.getElementById('comment-form') as HTMLFormElement
      const contentTextarea = document.getElementById('comment-content') as HTMLTextAreaElement
      const submitBtn = document.getElementById('submit-comment-btn') as HTMLButtonElement

      // ÊòæÁ§∫ÂõûÂ§çÊèêÁ§∫
      const replyInfo = document.createElement('div')
      replyInfo.id = 'reply-info'
      replyInfo.className = 'mb-3 p-3 bg-primary/10 border border-primary/20 rounded-md flex items-center justify-between'
      replyInfo.innerHTML = `
        <div class="text-sm">
          <span class="font-medium">Replying to ${userName}</span>
        </div>
        <button
          type="button"
          onclick="window.commentSystem?.clearReply()"
          class="text-muted-foreground hover:text-foreground"
        >
          ‚úï
        </button>
      `

      // ÁßªÈô§ÊóßÁöÑÂõûÂ§çÊèêÁ§∫
      const existingReplyInfo = document.getElementById('reply-info')
      if (existingReplyInfo) {
        existingReplyInfo.remove()
      }

      // ÊèíÂÖ•ÂõûÂ§çÊèêÁ§∫
      if (form && contentTextarea && contentTextarea.parentElement) {
        form.insertBefore(replyInfo, contentTextarea.parentElement)

        // ËÅöÁÑ¶Âà∞ËØÑËÆ∫Ê°Ü
        contentTextarea.focus()
        contentTextarea.scrollIntoView({ behavior: 'smooth', block: 'center' })

        // Êõ¥Êñ∞ÊåâÈíÆÊñáÊú¨
        submitBtn.textContent = 'Post Reply'
      }
    }

    // Ê∏ÖÈô§ÂõûÂ§çÁä∂ÊÄÅ
    clearReply() {
      this.replyToId = null
      this.replyToName = null

      const replyInfo = document.getElementById('reply-info')
      if (replyInfo) {
        replyInfo.remove()
      }

      const submitBtn = document.getElementById('submit-comment-btn') as HTMLButtonElement
      if (submitBtn) {
        submitBtn.textContent = 'Post Comment'
      }
    }

    showError() {
      const error = document.getElementById('comments-error')
      const container = document.getElementById('comments-list')
      const noComments = document.getElementById('no-comments')

      if (error) error.classList.remove('hidden')
      if (container) container.classList.add('hidden')
      if (noComments) noComments.classList.add('hidden')
    }

    showToast(message: string, type = 'info') {
      const toast = document.createElement('div')
      toast.className = `fixed bottom-4 right-4 px-4 py-2 rounded-md text-white z-50 ${
        type === 'success' ? 'bg-green-600' :
        type === 'error' ? 'bg-red-600' : 'bg-blue-600'
      }`
      toast.textContent = message
      document.body.appendChild(toast)

      setTimeout(() => {
        toast.remove()
      }, 3000)
    }

    getCookie(name: string): string | undefined {
      const value = `; ${document.cookie}`
      const parts = value.split(`; ${name}=`)
      if (parts.length === 2) {
        const result = parts.pop()?.split(';').shift()
        return result
      }
      return undefined
    }

    clearCookie(name: string) {
      document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`
    }
  }

  // ÂàùÂßãÂåñËØÑËÆ∫Á≥ªÁªü
  document.addEventListener('DOMContentLoaded', () => {
    const windowWithSystem = window as WindowWithCommentSystem
    windowWithSystem.commentSystem = new CommentSystem()
  })
</script>