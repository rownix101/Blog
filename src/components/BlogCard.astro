---
import {
  getCombinedReadingTime,
  getSubpostCount,
  isSubpost,
  parseAuthors,
} from '@/lib/data-utils'
import { formatDate, getTagVariant } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import type { CollectionEntry } from 'astro:content'
import Link from './Link.astro'

interface Props {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const formattedDate = formatDate(entry.data.date)
const readTime = await getCombinedReadingTime(entry.id)
const authors = await parseAuthors(entry.data.authors ?? [])
const subpostCount = !isSubpost(entry.id) ? await getSubpostCount(entry.id) : 0
const [lang, ...idParts] = entry.id.split('/')
const id = idParts.join('/')
---

<Link
  href={`/${lang}/blog/${id}`}
  class="group relative -mx-2 block py-4 pl-4 pr-2 transition-all duration-200"
>
  <!-- Decorative left border that expands on hover -->
  <span
    class="bg-primary/40 group-hover:bg-primary absolute top-2 bottom-2 left-0 w-0.5 origin-top scale-y-0 transition-transform duration-300 group-hover:scale-y-100"
    aria-hidden="true"></span>

  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0 flex-1 space-y-1.5">
      <!-- Title with hover translate effect -->
      <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:gap-2.5">
        <h3
          class="text-foreground/90 group-hover:text-primary text-base leading-snug font-semibold transition-all duration-200 group-hover:translate-x-0.5"
        >
          {entry.data.title}
        </h3>
        <span
          class="text-muted-foreground/50 shrink-0 text-xs font-normal whitespace-nowrap"
        >
          {formattedDate}
        </span>
      </div>
      <p
        class="text-muted-foreground line-clamp-1 text-sm leading-snug transition-all duration-200 group-hover:translate-x-0.5"
      >
        {entry.data.description}
      </p>
      <div
        class="text-muted-foreground/70 flex flex-wrap items-center gap-x-2.5 gap-y-1 pt-0.5 text-xs transition-all duration-200 group-hover:translate-x-0.5"
      >
        {
          authors.length > 0 && (
            <span class="font-medium">{authors.map((a) => a.name).join(', ')}</span>
          )
        }
        {authors.length > 0 && <span class="text-muted-foreground/30">·</span>}
        <span class="flex items-center gap-1">
          <Icon name="lucide:clock" class="text-primary/60 size-3" />
          {readTime}
        </span>
        {
          subpostCount > 0 && (
            <>
              <span class="text-muted-foreground/30">·</span>
              <span class="flex items-center gap-1">
                <Icon name="lucide:file-text" class="text-decorative/70 size-3" />
                {subpostCount}
              </span>
            </>
          )
        }
        {
          entry.data.tags && entry.data.tags.length > 0 && (
            <>
              <span class="text-muted-foreground/30">·</span>
              <div class="flex flex-wrap items-center gap-1">
                {entry.data.tags.slice(0, 2).map((tag) => {
                  const { className, tooltip } = getTagVariant(tag)
                  return (
                    <div class="group/tag relative">
                      <span
                        class={`text-muted-foreground/60 hover:text-primary rounded px-1.5 py-0.5 text-[10px] font-medium transition-colors ${className || ''}`}
                      >
                        {tag}
                      </span>
                      {tooltip && (
                        <span class="pointer-events-none invisible absolute bottom-full left-1/2 z-[100] mb-2 w-max max-w-xs -translate-x-1/2 rounded-md border border-gray-700 bg-gray-900 px-2 py-1 text-[10px] text-white opacity-0 shadow-xl transition-all duration-200 group-hover/tag:visible group-hover/tag:opacity-100 dark:border-gray-200 dark:bg-gray-50 dark:text-gray-900">
                          {tooltip}
                          <span class="absolute top-full left-1/2 h-0 w-0 -translate-x-1/2 border-t-[4px] border-r-[4px] border-l-[4px] border-t-gray-900 border-r-transparent border-l-transparent dark:border-t-gray-50" />
                        </span>
                      )}
                    </div>
                  )
                })}
                {entry.data.tags.length > 2 && (
                  <span class="text-muted-foreground/40 text-[10px]">
                    +{entry.data.tags.length - 2}
                  </span>
                )}
              </div>
            </>
          )
        }
      </div>
    </div>
  </div>
</Link>
