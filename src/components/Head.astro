---
import { SITE, ANALYTICS, UMAMI } from '@/consts'
import { ClientRouter } from 'astro:transitions'
import Favicons from './Favicons.astro'

interface Props {
  title?: string
  description?: string
  image?: string
  lang?: string
}

const {
  title = SITE.title,
  description = SITE.description,
  image,
  lang = 'zh-cn'
} = Astro.props

const enableViewTransitions =
  import.meta.env.DEV ||
  import.meta.env.PUBLIC_ENABLE_VIEW_TRANSITIONS === 'true'

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href
const cleanPathname = Astro.url.pathname.replace(/\/$/, '')
const ogImage = image || (cleanPathname ? new URL(`/og${cleanPathname}.png`, Astro.site).href : new URL('/og-default.png', Astro.site).href)
---

<head>
  <script is:inline>
    (function () {
      const theme =
        localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches
          ? 'dark'
          : 'light')
      document.documentElement.setAttribute('data-theme', theme)
    })()
  </script>

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />

  <!-- Primary Meta Tags (deduplicated) -->
  <meta name="title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta name="description" content={desc} />
  })()}
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta property="og:description" content={desc} />
  })()}
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta name="twitter:description" content={desc} />
  })()}
  <meta name="twitter:image" content={ogImage} />

  <meta name="HandheldFriendly" content="True" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta
    name="format-detection"
    content="telephone=no,date=no,address=no,email=no,url=no"
  />

  <meta
    name="theme-color"
    content="#2563eb"
    media="(prefers-color-scheme: dark)"
  />
  <meta
    name="theme-color"
    content="#2563eb"
    media="(prefers-color-scheme: light)"
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={`${SITE.title} (${lang})`}
    href={new URL(`${lang}/rss.xml`, Astro.site)}
  />

  <Favicons />
  
  <!-- Font Preloading to prevent layout shifts -->
  <link rel="preload" href="/fonts/GeistVF.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  <link rel="preload" href="/fonts/GeistMonoVF.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  
  <!-- Resource Hints for Performance -->
  {ANALYTICS.google && (
    <>
      <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
      <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
    </>
  )}
  {UMAMI.websiteId && (
    <>
      <link rel="dns-prefetch" href="https://cloud.umami.is" />
      <link rel="preconnect" href="https://cloud.umami.is" crossorigin />
    </>
  )}
  <!-- Google Analytics -->
  {ANALYTICS.google && (
    <>
      <script is:inline define:vars={{ gaId: ANALYTICS.google }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', gaId);
      </script>
      <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${ANALYTICS.google}`}></script>
    </>
  )}
  
  {enableViewTransitions && <ClientRouter />}
  <!-- Umami Analytics -->
  {UMAMI.websiteId && (
    <script is:inline defer src="https://cloud.umami.is/script.js" define:vars={{ websiteId: UMAMI.websiteId }} data-website-id={UMAMI.websiteId}></script>
  )}

  <script is:inline>
    ;(() => {
      if (
        !('HTMLScriptElement' in window) ||
        typeof HTMLScriptElement.supports !== 'function' ||
        !HTMLScriptElement.supports('speculationrules')
      ) {
        return
      }

      const rules = { prerender: [{ source: 'list', urls: [] }] }
      let rulesScript

      const applyRules = () => {
        if (rulesScript) rulesScript.remove()
        rulesScript = document.createElement('script')
        rulesScript.type = 'speculationrules'
        rulesScript.textContent = JSON.stringify(rules)
        document.head.appendChild(rulesScript)
      }

      applyRules()

      const seen = new Set()
      const dnsPrefetchOrigins = new Set()
      const currentPath = window.location.pathname + window.location.search

      const addUrl = (url) => {
        if (!url || seen.has(url) || url === currentPath) return
        seen.add(url)
        rules.prerender[0].urls.push(url)
        applyRules()
      }

      document.addEventListener('pointerover', (event) => {
        const target = event.target
        if (!(target instanceof Element)) return

        const link = target.closest('a')
        if (!link) return
        if (link.hasAttribute('download')) return
        if (link.target && link.target !== '_self') return

        const href = link.getAttribute('href')
        if (!href || href.startsWith('#')) return

        const url = new URL(link.href, window.location.href)
        if (url.origin === window.location.origin) {
          addUrl(url.pathname + url.search)
          return
        }

        if ((link.getAttribute('rel') || '').split(/\s+/).includes('friend')) {
          if (!dnsPrefetchOrigins.has(url.origin)) {
            dnsPrefetchOrigins.add(url.origin)
            const hint = document.createElement('link')
            hint.rel = 'dns-prefetch'
            hint.href = url.origin
            document.head.appendChild(hint)
          }
        }
      })
    })()
  </script>

  <slot />
</head>
